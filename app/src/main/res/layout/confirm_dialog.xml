<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:clickable="true"
   app:layoutDescription="@xml/confirm_dialog_scene">

   <View
      android:id="@+id/view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#AA000000" />

   <ImageView
      android:id="@+id/imageView41"
      style="@style/add_shadow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/rectangle4" />

   <TextView
      android:id="@+id/confirmDialogTitle"
      style="@style/add_shadow"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="@font/gomarice_rockin_record"
      android:text="Dialog Title"
      android:textAlignment="center"
      android:textColor="@android:color/holo_red_light"
      android:textSize="28dp"
      app:layout_constraintEnd_toEndOf="@+id/imageView41"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/imageView41"
      app:layout_constraintTop_toTopOf="@+id/imageView41" />

   <TextView
      android:id="@+id/confirmDialogDescription"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="18dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="@font/gomarice_rockin_record"
      android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. (Don't put more than 3 lines here)"
      android:textColor="@color/black"
      app:layout_constraintEnd_toEndOf="@+id/imageView41"
      app:layout_constraintStart_toStartOf="@+id/imageView41"
      app:layout_constraintTop_toBottomOf="@+id/confirmDialogTitle"
      app:lineHeight="20dp" />

   <ImageButton
      android:id="@+id/confirmBtn"
      style="@style/add_shadow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="64dp"
      android:layout_marginBottom="-32dp"
      android:background="@drawable/ic_baseline_brightness_1_80"
      app:layout_constraintBottom_toBottomOf="@+id/imageView41"
      app:layout_constraintEnd_toEndOf="@+id/imageView41"
      app:srcCompat="@drawable/ic_baseline_check_circle_80" />

   <ImageButton
      android:id="@+id/cancelBtn"
      style="@style/add_shadow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="64dp"
      android:layout_marginBottom="-32dp"
      android:background="@drawable/ic_baseline_brightness_1_red_80"
      app:layout_constraintBottom_toBottomOf="@+id/imageView41"
      app:layout_constraintStart_toStartOf="@+id/imageView41"
      app:srcCompat="@drawable/ic_baseline_close_65" />

</androidx.constraintlayout.motion.widget.MotionLayout>