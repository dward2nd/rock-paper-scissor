<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
   package="com.rockpaperscissor">

   <uses-permission android:name="android.permission.INTERNET" />

   <application
      android:allowBackup="true"
      android:fullBackupOnly="false"
      android:icon="@mipmap/rps_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/rps_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.RockPaperScissor"
      android:usesCleartextTraffic="true">
      <activity
         android:name=".SummarizeActivity"
         android:exported="true"
         android:parentActivityName=".SelectPlayer">
         <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".SelectPlayer" />
      </activity>
      <activity
         android:name=".GameplayActivity"
         android:exported="true"
         android:parentActivityName=".SelectPlayer">
         <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".SelectPlayer" />
      </activity>
      <activity
         android:name=".SelectPlayer"
         android:exported="true" />
      <activity
         android:name=".SettingActivity"
         android:exported="true" />
      <activity
         android:name=".LoginActivity"
         android:exported="true"
         android:windowSoftInputMode="stateVisible">
         <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>

      <meta-data
         android:name="preloaded_fonts"
         android:resource="@array/preloaded_fonts" />
   </application>

</manifest>